LIB2 = -L/home/a/a0122960/lapack-3.6.1 -llapack -lrefblas -lgfortran

all: clean dbdsqru.o CGS2.o DGEBRDG_4_TRISIDE.o DGEBRDG_LP1.o ERR.o RESGKL.o doqds1.o doqds3.o dlartg6.o dlartg7.o dfma0.o RESGKL_MAIN.o fileinput_gkl

%.o: src/%.f90
	/home/a/a0122960/GCC_620/bin/gfortran -Wall -mcmodel=medium -fopenmp -O3 -mtune=haswell -march=haswell -c -o src/$@ $<

%.o: lib/%.f
	/home/a/a0122960/GCC_620/bin/gfortran -fopenmp -mcmodel=medium -O3 -mtune=haswell -march=haswell -c -o lib/$@ $<

dlartg7.o:
	/home/a/a0122960/GCC_620/bin/gfortran -fopenmp -mcmodel=medium -O2 -c -o lib/dlartg7.o lib/dlartg7.f

dfma0.o:
	/home/a/a0122960/GCC_620/bin/gcc -O3 -fopenmp -mtune=haswell -march=haswell -mcmodel=medium -c -o lib/dfma0.o lib/dfma0.c

fileinput_gkl:
	/home/a/a0122960/GCC_620/bin/gcc -O3 -fopenmp -mtune=haswell -march=haswell -mcmodel=medium -std=c99 -o fileinput_gkl fileinput_gkl.c lib/dbdsqru.o src/CGS2.o src/DGEBRDG_4_TRISIDE.o src/DGEBRDG_LP1.o src/ERR.o src/RESGKL.o lib/doqds1.o lib/doqds3.o lib/dlartg6.o lib/dlartg7.o lib/dfma0.o src/RESGKL_MAIN.o ${LIB2}

clean:
	rm -rf lib/*.o src/*.o fileinput_gkl

